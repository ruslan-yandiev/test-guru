<div class="row justify-content-center">
  <div class="<col col-md-4>">
    <div class="card-body">

      <h1><%= t('.header') %></h1>
      <p>
        <!--   хелпер link_to генерирует для нас ссылку к ресурсу по переданному вторым аргументом адрессу
        но удобней использовать в качестве пути хелпер роутинга new_test_path вместо '/tests/new' -->
        <%= link_to t('.create'), new_admin_test_path, class: "btn btn-success" %>
      </p>

      <% if @tests.present? %>

        <table class='table table-hover table-responsive-sm'>
          <thead>
            <tr>
              <th class="sort-by-title pointer">
                <%= t('.title') %>
                <%= octicon 'arrow-up', class: "text-success hide" %>
                <%= octicon 'arrow-down', class: "text-success hide" %>   
              </th>
              <th><%= t('.level') %></th>
              <th><%= t('.questions') %></th>
              <!-- колонка будет распространяться на все три ячейки -->
              <th colspan="3"><%= t('.actions') %></th>
            </tr>
          </thead>
          
          <tbody>
            <!-- обработаем коллекцию тестов в представлении _test.html.erb
            Rails сам использует Итератор на коллекции -->
            <strong><%= render @tests %></strong>
          </tbody>
        </table>

      <% else %>
        <p>You have no tests in progress at this moment.</p>
      <% end %>
    </div>
  </div>
</div>