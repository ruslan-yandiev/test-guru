<div class="card p-3 my-5">
  <%= form_with model: [:admin, @question, @answer], local: true do |form| %>
    <!-- отрендерим представление(паршл) обработки отображения ошибок -->
    <%= render 'shared/errors', resourse: @answer %>
    <div class="form-group">
      <p>
        <%= form.label :body %> <br>
        <%= form.text_field :body, id: :answer_body, rows: 7, cols: 60 %>
      </p>

      <p>
        <%= form.label :correct %> <br>
        <%= form.check_box :correct, id: :answer_correct %>
      </p>

      <p><%= form.submit class: "btn btn-success" %></p>
    </div>
  <% end %>
</div>