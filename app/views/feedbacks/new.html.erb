<h1 class="row justify-content-center mt-3">Обратная связь</h1>

<div class="row justify-content-center mt-3">
	<div class="col-12 col-sm-5 border rounded p-4 border-info">
	  <%= render 'shared/errors', resource: @feedback %>

	  <%= form_with url: feedbacks_path, local: true, method: :post do |f| %>
	    <div class="form-group">
	      <%= f.label :email, t('feedback.author') %>
	      <%= f.text_field :email, class: "form-control", value: current_user.try(:email) %>
	    </div>

	    <div class="form-group">
	      <%= f.text_area :text, class: "form-control", required: true %>
	    </div>
	    <%= f.submit t('feedback.send'), class: 'btn btn-outline-primary' %>
	  <% end %>
	</div>
</div>
