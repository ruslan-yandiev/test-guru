<% if resourse.present? && resourse.errors.any? %>
	<%= content_tag :div, class: 'alert alert-danger resourse-errors', data: {resourse_id: resourse.id } do %>
	   <h2>
	   	<%= t('.header', count: resourse.errors.count) %>:
	   </h2>

	   <ul>
	   	<!-- переберем массив ошибок и выведим их -->
	     <% resourse.errors.full_messages.each do |message| %>
	       <li><%= message %></li>
	     <% end %>
	   </ul>
	<% end %>
<% end %>

<!-- для того, чтобы обработка отображения об ошибках была доступна для всех классов наших моделей
мы вынесли обработку отображения ошибок в отдельное представление в папке /shared -->